<Window
    xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImgGetCoordinates">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Panel Height="30" >
            <Button Width="150" Click="OnButtonClicked">Открыть изображение</Button>
        </Panel>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" BorderBrush="Blue" BorderThickness="3">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas Name="DrawArea" PointerMoved="DrawArea_PreviewMouseMove">
                    <Image Name="Img1" Stretch="None"></Image>
                </Canvas>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>